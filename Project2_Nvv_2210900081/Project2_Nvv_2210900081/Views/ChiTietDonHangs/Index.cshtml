@model IEnumerable<Project2_Nvv_2210900081.Models.ChiTietDonHang>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<style>
    /* Phong cách cho bảng Chi Tiết Đơn Hàng */
    .chi-tiet-don-hang-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 18px;
        text-align: left;
    }

        /* Phong cách cho tiêu đề bảng */
        .chi-tiet-don-hang-table th {
            background-color: #2F855A; /* Màu xanh lá cây đậm */
            color: white;
            padding: 12px;
            text-transform: uppercase;
            font-weight: bold;
            border: 1px solid #dddddd;
        }

        /* Phong cách cho các ô dữ liệu trong bảng */
        .chi-tiet-don-hang-table td {
            padding: 12px;
            border: 1px solid #dddddd;
        }

        /* Phong cách cho các hàng dữ liệu */
        .chi-tiet-don-hang-table tr:nth-child(even) {
            background-color: #f9f9f9; /* Màu xám nhạt cho hàng chẵn */
        }

        .chi-tiet-don-hang-table tr:hover {
            background-color: #e6fffa; /* Màu xanh biển nhạt khi hover */
        }

        /* Phong cách cho các liên kết trong bảng (Edit, Details, Delete) */
        .chi-tiet-don-hang-table a {
            color: #1D4ED8; /* Màu xanh biển đậm */
            text-decoration: none;
            font-weight: bold;
            padding: 5px;
        }

            .chi-tiet-don-hang-table a:hover {
                color: #1E40AF; /* Màu xanh biển đậm hơn khi hover */
                text-decoration: underline;
            }

    /* Phong cách cho nút "Create New" */
    .create-new-link {
        background-color: #F6AD55; /* Màu cam nhạt */
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
    }

        .create-new-link:hover {
            background-color: #DD6B20; /* Màu cam đậm hơn khi hover */
            color: white;
        }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.so_luong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonHang.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SanPham.ten)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.so_luong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonHang.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SanPham.ten)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
